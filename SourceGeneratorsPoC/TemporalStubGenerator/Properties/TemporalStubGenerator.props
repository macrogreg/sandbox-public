<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <EmitCompilerGeneratedFiles Condition=" '$(EmitCompilerGeneratedFiles)' == '' ">true</EmitCompilerGeneratedFiles>

    <CompilerGeneratedFilesOutputDirName  Condition=" '$(CompilerGeneratedFilesOutputDirName)' == '' ">_AutoGenerated</CompilerGeneratedFilesOutputDirName>
    <CompilerGeneratedFilesOutputPath Condition=" '$(CompilerGeneratedFilesOutputPath)' == '' ">$(MSBuildProjectDirectory)\$(CompilerGeneratedFilesOutputDirName)</CompilerGeneratedFilesOutputPath>

    <CompilerGeneratedFilesFolderLabel Condition=" '$(CompilerGeneratedFilesFolderLabel)' == '' ">_AutoGenerated</CompilerGeneratedFilesFolderLabel>
  </PropertyGroup>

  <ItemGroup Condition=" '$(EmitCompilerGeneratedFiles)' == 'true' ">
    <AutoGeneratedFiles Include="$(CompilerGeneratedFilesOutputPath)/**/*.*" />
    <Compile Remove="@(AutoGeneratedFiles)" />

    <None Include="@(AutoGeneratedFiles)" Link="$(CompilerGeneratedFilesFolderLabel)\%(RecursiveDir)%(Filename)%(Extension)" Visible="true" />

  </ItemGroup>

</Project>
