<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
  </PropertyGroup>
  
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>_AutoGenerated</CompilerGeneratedFilesOutputPath>
    <CompilerGeneratedFilesFolderLabel>_AutoGenerated</CompilerGeneratedFilesFolderLabel>
  </PropertyGroup>

  <ItemGroup>
    <AutoGeneratedFiles Include="$(CompilerGeneratedFilesOutputPath)/**/*.*" />
    <Compile Remove="@(AutoGeneratedFiles)" />

    <None Include="@(AutoGeneratedFiles)" Link="$(CompilerGeneratedFilesFolderLabel)\%(RecursiveDir)%(Filename)%(Extension)" Visible="true" />

  </ItemGroup>

  <!--   
  <PropertyGroup>
    <LangVersion>9</LangVersion>
  </PropertyGroup>
  -->
  
  <ItemGroup>
    <ProjectReference Include="..\ExternalWorkflowImplementation\ExternalWorkflowImplementation.csproj" />
    <ProjectReference Include="..\MockSdkLibrary\MockSdkLibrary.csproj" />
    <ProjectReference Include="..\TemporalStubGenerator\TemporalStubGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="BinaryOnlyWfImplementation.dll">
      <!--
      <HintPath>..\BinaryOnlyWfImplementation\bin\Debug\net6.0\BinaryOnlyWfImplementation.dll</HintPath>
      -->
      <HintPath>..\BinaryOnlyWfImplementation\CompiledAssembly\BinaryOnlyWfImplementation.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
