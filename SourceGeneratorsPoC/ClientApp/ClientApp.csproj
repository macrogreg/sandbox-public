<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
  </PropertyGroup>
  
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>_AutoGenerated</CompilerGeneratedFilesOutputPath>
    <CompilerGeneratedFilesFolderLabel>_AutoGenerated</CompilerGeneratedFilesFolderLabel>
  </PropertyGroup>

  <ItemGroup>
    <AutoGeneratedFiles Include="$(CompilerGeneratedFilesOutputPath)/**/*.*" />
    <Compile Remove="@(AutoGeneratedFiles)" />

    <None Include="@(AutoGeneratedFiles)"
          Link="$(CompilerGeneratedFilesFolderLabel)\%(RecursiveDir)%(Filename)%(Extension)"
          Visible="true" />

  </ItemGroup>

  <!--
  <PropertyGroup>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>
  -->
  
  <ItemGroup>
    <ProjectReference Include="..\MockSdkLibrary\MockSdkLibrary.csproj" />
    <ProjectReference Include="..\TemporalStubGenerator\TemporalStubGenerator.csproj"
                      OutputItemType="Analyzer"
                      ReferenceOutputAssembly="false" />
  </ItemGroup>

</Project>
